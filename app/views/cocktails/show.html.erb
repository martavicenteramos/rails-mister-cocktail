 <div class="container">
<div class="notice">
  <%= notice %>
</div>

<h1><%= @cocktail.name %></h1>
<div class="card mb-3" style="max-width: vw;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <%= cl_image_tag @cocktail.photo, height: 300, width: 350, crop: :fill %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= @cocktail.name %> recipe:</h5>
          <ul>
            <% @cocktail.doses.each do |ele| %>
              <li>
                <%= ele.description %>
                <%= ele.ingredient.name %>
                <button class="delete-button btn btn-link">ðŸ’£</button>
                <%= link_to 'ðŸ’£', cocktail_dose_path(@cocktail, ele), method: :delete, class: "d-none delete-link" %>
              </li>
            <% end %>
          </ul>
      </div>
    </div>
  </div>
</div>

<h3>Add ingredients!</h3>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <% if @dose.errors.any? %>
    <div class="alert alert-danger">
      <h4>Warning! You have some errors:</h4>
      <ul>
        <% @dose.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.association :ingredient %>
  <%= f.input :description %>
    <div class="form-actions">
     <%= f.button :submit, class: "btn btn-primary mt-5 w-100"%>
    </div>
<% end %>

</div>
