<div class="cards">
  <% @cocktails.each do |ele| %>
    <%= link_to cocktail_path(ele), class: "text-decoration-none" do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(https://images.unsplash.com/photo-1551538827-9c037cb4f32a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60)">
        <%= ele.name %>
      </div>
    <% end %>
  <% end %>
</div>


<%=link_to "Create new cocktails", new_cocktail_path, class: "btn btn-outline-secondary w-100 mt-5"%>


